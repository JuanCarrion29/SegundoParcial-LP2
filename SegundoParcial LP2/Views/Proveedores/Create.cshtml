@model Proveedor

@{
    ViewData["Title"] = "Crear Proveedor";
}

<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" type="image/png" href="https://cdn-icons-png.flaticon.com/128/15546/15546746.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .shadow-custom {
            box-shadow: 0 2px 16px rgba(0,0,0,0.07), 0 1.5px 3px rgba(0,0,0,0.03);
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="brand-header d-flex align-items-center gap-3 mb-4">
            <img src="https://cdn-icons-png.flaticon.com/128/743/743131.png" alt="Logo Proveedor" width="40" height="40">
            <h1 class="fw-bold text-dark mb-0">Crear nuevo proveedor</h1>
        </div>

        <div class="card shadow-custom mb-4">
            <div class="card-body fs-5 text-secondary">
                Completa el formulario para añadir un nuevo proveedor.
            </div>
        </div>

        <form asp-action="Create" method="post" class="bg-white p-4 rounded shadow-custom">
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label fw-semibold"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Nombre del proveedor" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Empresa" class="form-label fw-semibold"></label>
                <input asp-for="Empresa" class="form-control" placeholder="Empresa" />
            </div>
            <div class="mb-3">
                <label asp-for="Correo" class="form-label fw-semibold"></label>
                <input asp-for="Correo" class="form-control" placeholder="Correo electrónico" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NumeroContacto" class="form-label fw-semibold"></label>
                <input asp-for="NumeroContacto" class="form-control" placeholder="Teléfono de contacto" />
                <span asp-validation-for="NumeroContacto" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-success px-4 fw-semibold shadow-sm">
                    <i class="bi bi-person-plus"></i> Guardar
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4 fw-semibold shadow-sm">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>