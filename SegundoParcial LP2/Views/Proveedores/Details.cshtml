@model Proveedor

@{
    ViewData["Title"] = "Detalle del Proveedor";
}

<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" type="image/png" href="https://cdn-icons-png.flaticon.com/128/15546/15546746.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .shadow-custom {
            box-shadow: 0 2px 16px rgba(0,0,0,0.07), 0 1.5px 3px rgba(0,0,0,0.03);
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="brand-header d-flex align-items-center gap-3 mb-4">
            <img src="https://cdn-icons-png.flaticon.com/128/743/743131.png" alt="Logo Proveedor" width="40" height="40">
            <h1 class="fw-bold text-dark mb-0">Detalle del proveedor</h1>
        </div>

        <div class="card shadow-custom mb-4">
            <div class="card-body fs-5 text-secondary">
                Información detallada del proveedor seleccionado.
            </div>
        </div>

        <div class="card shadow-custom mb-4">
            <div class="card-body">
                <dl class="row fs-5">
                    <dt class="col-sm-3 text-secondary fw-semibold"><i class="bi bi-person"></i> Nombre</dt>
                    <dd class="col-sm-9">@Model.Nombre</dd>

                    <dt class="col-sm-3 text-secondary fw-semibold"><i class="bi bi-buildings"></i> Empresa</dt>
                    <dd class="col-sm-9">@Model.Empresa</dd>

                    <dt class="col-sm-3 text-secondary fw-semibold"><i class="bi bi-envelope"></i> Correo</dt>
                    <dd class="col-sm-9">@Model.Correo</dd>

                    <dt class="col-sm-3 text-secondary fw-semibold"><i class="bi bi-telephone"></i> Contacto</dt>
                    <dd class="col-sm-9">@Model.NumeroContacto</dd>
                </dl>
            </div>
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-warning px-4 fw-semibold shadow-sm" asp-action="Edit" asp-route-id="@Model.Id">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a class="btn btn-danger px-4 fw-semibold shadow-sm" asp-action="Delete" asp-route-id="@Model.Id">
                <i class="bi bi-trash"></i> Eliminar
            </a>
            <a class="btn btn-secondary px-4 fw-semibold shadow-sm" asp-action="Index">
                <i class="bi bi-arrow-left-circle"></i> Volver
            </a>
        </div>
    </div>
</body>
</html>